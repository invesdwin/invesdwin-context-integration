<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="jppfServer"
		class="de.invesdwin.context.integration.jppf.server.ConfiguredJPPFServer"
		init-method="start" destroy-method="stop">
	</bean>

	<bean id="jppfNode"
		class="de.invesdwin.context.integration.jppf.node.ConfiguredJPPFNode">
		<!-- startup/shutdown is handled manually in server -->
	</bean>

	<bean id="invesdwin-context-integration-jppf-server"
		class="de.invesdwin.context.integration.jppf.server.internal.JPPFServicePublication" />

</beans>